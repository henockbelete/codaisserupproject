<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">

    <p>Name: <%= @event.name %></p>
    <p>Host: <%= @event.user.email %></p>

    <!-- Main Info -->
    <h4>Main Info</h4>

  <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>

    <!-- Amenities -->
        <h4>Amenities</h4>
        <ul class="amenities">
          <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Food" %></li>
          <li><%= !@event.includes_drinks ? ("<del>Drinks</del>").html_safe : "Drinks" %></li>

        </ul>

        <h4>Photos</h4>
        <% @event.photos.each do |photo| %>
        <div class="panel panel-default">
        <div class="panel-heading">
        <%= image_tag photo.image.thumbnail %>
        </div>
      </div>
    <% end %>
        <h4>Catagories</h4>
        <% @catagories.each do |catagory| %>
          <span class="label label-success"><%= catagory.name %></span>
        <% end %>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
